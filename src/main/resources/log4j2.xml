<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} ${hostName} %X{sessionId} %X{userId} [%t] %highlight{%-5level %M: %msg%n%throwable}{FATAL=white, ERROR=red, WARN=bright_blue, INFO=black, DEBUG=bright_green, TRACE=blue}
        </Property>
    </Properties>
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
    </Appenders>
	    <!-- Rolling File Appender -->
	<RollingFile name="FileAppender" fileName="logs/log4j2-demo.log" 
	             filePattern="logs/log4j2-demo-%d{yyyy-MM-dd}-%i.log">
	    <PatternLayout>
	        <Pattern>${LOG_PATTERN}</Pattern>
	    </PatternLayout>
	    <Policies>
	        <SizeBasedTriggeringPolicy size="10MB" />
	    </Policies>
	    <DefaultRolloverStrategy max="10"/>
	</RollingFile>
    <Loggers>
        <Logger name="com.aix.api" level="debug" additivity="false">
            <AppenderRef ref="ConsoleAppender" />
            <AppenderRef ref="FileAppender" />
        </Logger>

        <Root level="info">
            <AppenderRef ref="ConsoleAppender" />
            <AppenderRef ref="FileAppender"/>
        </Root>
        
    </Loggers>
</Configuration>